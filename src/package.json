{
    "name": "musicplayer",
    "productName": "musicPlayer",
    "version": "1.0.0",
    "main": "main.js",

    "author": "alexbcberio",
    "description": "A music player",

    "devDependencies": {
        "electron": "^1.4.15",
        "electron-builder": "^12.3.1"
    },

    "dependencies": {
        "electron-updater": "^1.4.2",
        "musicmetadata": "2.0.5",
        "curl": "0.1.4"
    },
    "build": {
        "publish": [{
            "provider": "github",
            "owner": "alexbcberio",
            "repo": "musicPlayer"
        }],
        "appId": "com.github.alexbcberio.musicPlayer",

        "win": {
            "target": ["nsis", "7z"]
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false
        },

        "linux": {
            "target": ["deb", "rpm", "pacman", "7z"]
        }
    }
}
