{
    "main": "main.js",

    "name": "musicplayer",
    "productName": "musicPlayer",
    "description": "A MP3 music player",
    "license": "SD-3-Clause",

    "version": "1.0.3",

    "author": {
        "name": "alexbcberio",
        "email": "alexbcberio@gmail.com"
    },

    "devDependencies": {
        "electron": "^1.4.15",
        "electron-builder": "^12.3.1"
    },

    "dependencies": {
        "electron-updater": "^1.4.2",
        "musicmetadata": "2.0.5",
        "curl": "0.1.4"
    },

    "repository": {
        "type": "git",
        "url": "https://github.com/alexbcberio/musicPlayer.git"
    },

    "build": {
        "AasarUnpack": "assets #folder to not compile into asar file",
        "publish": [{
            "provider": "github",
            "owner": "alexbcberio",
            "repo": "musicPlayer"
        }],
        "appId": "com.github.alexbcberio.musicPlayer",

        "win": {
            "target": ["nsis", "7z"]
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false
        },

        "linux": {
            "target": ["7z"],
            "Wantedtarget": ["deb", "rpm", "pacman", "7z"]
        }
    }
}
